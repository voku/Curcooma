  <header class="header" role="banner">
    <h1>Curcooma!</h1>
    <section class="player-section bv-cf">
      <figure class="player-pic">
        <img src="" alt="" width="70" height="70"/>
      </figure>
      <table class="player-info">
        <tr>
          <td>Name:</td>
          <td class="player-name"></td>
        </tr>
        <tr>
          <td>Stufe:</td>
          <td><span class="player-level"></span></td>
        </tr>
      </table>
      <div class="meta-navi">
        <button class="button-alert"><span class="alert-count">2</span>
          <svg class="icon icon-bell">
            <use xlink:href="#icon-bell"></use>
          </svg>
        </button>
        <button class="button-settings">
          <svg class="icon icon-cog">
            <use xlink:href="#icon-cog"></use>
          </svg>
        </button>
      </div>
    </section>
    <div class="restaurant-info bv-cf">
      <div class="restaurant-info-box">
        <p>Restaurant</p>

        <h2 class="restaurant-name restaurant-info-hl"></h2>
      </div>
      <div class="fork-spoon-divider fork bv-float-left">
        <svg class="icon icon-spoon-knife">
          <use xlink:href="#icon-spoon-knife"></use>
        </svg>
      </div>
      <div class="restaurant-info-box">
        <p>Guthaben</p>
        <strong><span class="restaurant-money"></span> &euro;</strong>
      </div>
      <div class="fork-spoon-divider bv-float-left">
        <svg class="icon icon-spoon-knife">
          <use xlink:href="#icon-spoon-knife"></use>
        </svg>
      </div>
      <div class="restaurant-info-box">
        <p>Plätze</p>
        <strong class="restaurant-seats"></strong>
      </div>
    </div>
  </header>
  <section class="sidebar">
    <div class="navi-wrapper">
      <nav class="navigation open" role="navigation">
        <div class="local-time-container">
          <p>Hallo <strong class="player-name"></strong>,</p>

          <p>es ist <strong class="local-time">12:12</strong> <strong>Uhr</strong> am <strong class="local-date">12.12.2015</strong>.
            <br/>Die Entwicklung deines Restaurants ist insgesamt <strong class="restaurant-progress">positiv</strong>.
          </p>
        </div>
        <h3>Was möchtest du tun?</h3>
        <ul>
          <li>
            {{#link-to 'dashboard' title="Die Statistik lügt nicht"}}
              <span>Meine Entwicklung ansehen</span>
            {{/link-to}}
          </li>
          <li>
            {{#link-to 'restaurant' title="Stelle eine Speisekarte zusammen, kümmer dich um die Inneneinrichtung oder verwalte dein Kapital"}}
              <span>Mein Restaurant verwalten</span>
            {{/link-to}}
          </li>
          <li>
            {{#link-to 'personal' title="Du brauchst das beste Personal damit dein Restaurant läuft"}}
              <span>Mein Personal verwalten</span>
            {{/link-to}}
          </li>
          <li>
            {{#link-to 'grossmarkt' title="Kaufe Waren für deine Speisekarte und entdecke manchmal ungewöhnliche Dinge auf dem Großmarkt"}}
              <span>Auf den Großmarkt gehen</span>
            {{/link-to}}
          </li>
          <li>
            {{#link-to 'marketing' title="Entwickel knackige Marketing-Strategien für dein Restaurant"}}
              <span>Werbung machen</span>
            {{/link-to}}
          </li>
          <li>
            {{#link-to 'goodbye' title="Mach mal Feierabend und komm morgen wieder"}}
              <span>Mein Spiel verlassen</span>
            {{/link-to}}
          </li>
        </ul>
      </nav>
      <button class="navi-opener open">
        <svg class="icon icon-circle-right">
          <use xlink:href="#icon-circle-right"></use>
        </svg>
      </button>
    </div>
  </section>
  <main class="main bv-cf" role="main">
    <section class="content">
      {{outlet}}
    </section>
    <footer class="footer" role="contentinfo"></footer>
  </main>

